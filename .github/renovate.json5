{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:base',
    'group:allNonMajor',
    // ":disableDependencyDashboard",
    ':timezone(Asia/Tokyo)',
  ],
  rangeStrategy: 'bump',
  schedule: ['before 4am on sunday'],
  prHourlyLimit: 0,
  prConcurrentLimit: 10,
  branchConcurrentLimit: 10,
  automerge: true,
  platformAutomerge: true,
  major: {
    automerge: false,
  },
  "packageRules": [
    {
      "description": "Group dependencies from playglound package.json files",
      "matchFileNames": ["playground/package.json"],
      "groupName": "playglound package.json changes"
    }
  ]
}
