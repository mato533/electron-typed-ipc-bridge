{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "noEmit": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["rollup.config.ts", "src/**/*.ts"],
  "exclude": ["node_modules/**", "playground/**"]
}
